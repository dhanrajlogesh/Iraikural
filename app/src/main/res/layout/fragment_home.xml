<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screen"
    android:fillViewport="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">

    <TextView
        android:id="@+id/verseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By his Grace for his Glory\nPsalms 84:11"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center"/>


<!-- ✅ Logo Added (Static) -->
<ImageView
    android:id="@+id/logo"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:src="@drawable/iraikural_logo_screen"
    android:scaleType="fitCenter"
    android:layout_marginTop="30dp"/>


    <!-- ✅ Waveform Visualization -->
    <com.example.iraikural.WaveformView
        android:id="@+id/waveformView"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="12dp"/>

    <Button
    android:id="@+id/btnPlayPause"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="#FFEB3B"
    android:text="Play Radio"
    android:textColor="#000000"
    android:textSize="18sp" />

<TextView
    android:id="@+id/partnersText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OUR PARTNERS"
    android:textSize="16sp"
    android:textColor="#CCCCCC"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"/>

<ImageView
    android:id="@+id/partnerAdImage"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:scaleType="fitCenter"
    android:layout_marginTop="16dp"/>

</LinearLayout>
    </ScrollView>
